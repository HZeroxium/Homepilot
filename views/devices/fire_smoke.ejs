<!-- views/devices/fire_smoke.ejs -->

<%- include('../layouts/layout', { title: 'Hệ Thống Cảnh Báo Cháy và Khói' }) %>

<main class="container mx-auto px-4 py-8">
  <h2 class="text-2xl font-bold text-primary mb-4">Quản Lý Hệ Thống Cảnh Báo Cháy và Khói</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="bg-white p-4 shadow rounded">
      <p>Nhiệt độ: <span class="font-semibold"><%= device.temperature %>°C</span></p>
      <p>Độ ẩm: <span class="font-semibold"><%= device.humidity %>%</span></p>
    </div>
    <div class="bg-white p-4 shadow rounded">
      <p>Trạng thái cảnh báo: <span class="font-semibold"><%= device.alertStatus %></span></p>
      <!-- Hiển thị thông báo nếu có cảnh báo -->
      <% if (device.alertStatus === 'Active') { %>
        <div class="alert alert-error mt-4">
          Cảnh báo! Phát hiện khói hoặc lửa.
        </div>
      <% } %>
    </div>
  </div>
</main>


