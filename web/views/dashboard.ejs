<!-- views/dashboard.ejs -->
<% title = 'Dashboard' %>

<script src="https://www.gstatic.com/firebasejs/8.6.8/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/8.6.8/firebase-messaging.js"></script>

<% title = 'Dashboard' %>

<main class="container my-4">
  <h2 class="text-primary mb-4">
    <i class="bi bi-speedometer2"></i> Dashboard
  </h2>
  <p>Xin chào, <strong><%= user.displayName %></strong>!</p>

  <% if (error_msg) { %>
    <div class="alert alert-danger">
      <i class="bi bi-exclamation-circle-fill"></i> <%= error_msg %>
    </div>
  <% } %>
  <% if (success_msg) { %>
    <div class="alert alert-success">
      <i class="bi bi-check-circle-fill"></i> <%= success_msg %>
    </div>
  <% } %>

  <h3 class="my-4">
    <i class="bi bi-grid"></i> Thiết bị của bạn
  </h3>
  <div class="row g-4">
    <% devices.forEach(device => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <i class="bi bi-hdd-fill"></i> <%= device.name %>
            </h5>
            <p class="card-text">Loại: <%= device.type %></p>
            <p class="card-text">
              Trạng thái: 
              <span class="badge <%= device.status === 'Online' ? 'bg-success' : 'bg-secondary' %>">
                <%= device.status %>
              </span>
            </p>
            <a href="/devices/<%= device.type %>" class="btn btn-primary">
              <i class="bi bi-tools"></i> Quản lý
            </a>
            <div class="mt-3 d-flex justify-content-between">
              <a href="/devices/<%= device.uid %>/edit" class="btn btn-outline-secondary">
                <i class="bi bi-pencil-square"></i> Chỉnh Sửa
              </a>
              <form
                action="/devices/<%= device.uid %>/delete"
                method="POST"
                onsubmit="return confirm('Bạn có chắc chắn muốn xóa thiết bị này?');"
                class="d-inline"
              >
                <button type="submit" class="btn btn-danger">
                  <i class="bi bi-trash-fill"></i> Xóa
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <a href="/devices/add" class="btn btn-success mt-4">
    <i class="bi bi-plus-circle-fill"></i> Thêm Thiết Bị Mới
  </a>
</main>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/main.js"></script>

