<!-- views/devices/intrusion.ejs -->

<% title = 'Hệ Thống Phát Hiện Xâm Nhập' %>

<main class="container mt-5">
  <h2 class="text-primary mb-4">
    <i class="bi bi-shield-lock"></i> Quản Lý Hệ Thống Phát Hiện Xâm Nhập
  </h2>
  <p>Trạng thái hiện tại: <span class="fw-bold"><%= device.status %></span></p>
  <form action="/devices/intrusion/action" method="POST" class="d-flex gap-3">
    <button type="submit" name="action" value="arm" class="btn btn-primary">
      <i class="bi bi-shield"></i> Kích Hoạt
    </button>
    <button
      type="submit"
      name="action"
      value="disarm"
      class="btn btn-secondary"
    >
      <i class="bi bi-shield-x"></i> Vô Hiệu Hóa
    </button>
  </form>
</main>
