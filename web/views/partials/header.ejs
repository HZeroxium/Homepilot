<!-- views/partials/header.ejs -->
<header class="bg-light shadow-sm py-3">
  <div class="container d-flex justify-content-between align-items-center">
    <!-- Website Logo -->
    <a
      href="/"
      class="text-decoration-none text-primary d-flex align-items-center"
    >
      <i class="bi bi-tools fs-3 me-2"></i>
      <!-- Bootstrap Icon for logo -->
      <span class="fs-5 fw-bold">IoT Dashboard</span>
    </a>

    <!-- Search Bar -->
    <form class="d-flex" action="/search" method="GET">
      <input
        class="form-control me-2"
        type="search"
        name="q"
        placeholder="Search devices..."
        aria-label="Search"
      />
      <button class="btn btn-outline-primary" type="submit">
        <i class="bi bi-search"></i>
        <!-- Bootstrap Icon for search -->
      </button>
    </form>
  </div>
</header>
